<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MyButtonStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:layout_rowWeight">1</item>
        <item name="android:textSize">20sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:gravity">center</item>

        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@android:color/white</item>

    </style>
    <style name="MainOperation" parent="MyButtonStyle">
        <item name="android:backgroundTint">@color/milk_coffee</item>
    </style>
    <style name="OptionalOperation" parent="MyButtonStyle">
        <item name="android:backgroundTint">@color/sepia</item>
    </style>
    <style name="Number" parent="MyButtonStyle">
        <item name="android:backgroundTint">@color/shadows</item>
    </style>

    <style name="MyDisplayStyle">
        <item name="android:singleLine">true</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:ellipsize">start</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:gravity">center_vertical|end</item>
        <item name="android:textColor">@color/dark_lava</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="OperationDisplayVertical" parent="MyDisplayStyle">
        <item name="android:layout_weight">0.25</item>
        <item name="android:textSize">70sp</item>
    </style>
    <style name="OperationDisplayHorizontal" parent="MyDisplayStyle">
        <item name="android:layout_weight">0.2</item>
        <item name="android:textSize">40sp</item>
    </style>

    <style name="ResultDisplayVertical" parent="MyDisplayStyle">
        <item name="android:layout_weight">0.15</item>
        <item name="android:textSize">35sp</item>
    </style>
    <style name="ResultDisplayHorizontal" parent="MyDisplayStyle">
        <item name="android:layout_weight">0.125</item>
        <item name="android:textSize">20sp</item>
    </style>
</resources>