<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MyButtonStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">1dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="MainOperation" parent="MyButtonStyle">
        <item name="android:backgroundTint">@color/milk_coffee</item>
    </style>


    <style name="OptionalOperation" parent="MyButtonStyle">
        <item name="android:backgroundTint">@color/sepia</item>
    </style>

    <style name="Number" parent="MyButtonStyle">
        <item name="android:backgroundTint">@color/shadows</item>
    </style>

</resources>