<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#FF9999" /> <!-- Цвет фона при нажатии -->
            <corners android:radius="10dp" />
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="#FF0000" /> <!-- Цвет фона по умолчанию -->
            <corners android:radius="10dp" />
        </shape>
    </item>
</selector>
